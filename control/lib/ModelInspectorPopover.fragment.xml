<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
  xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<ResponsivePopover
		showHeader="false"
		contentWidth="400px"
		contentHeight="500px"
		placement="Auto" >
    <content>
		<NavContainer
			id="navCon">
			<Page
				id="models"
				title="Model Inspector">
				<List
					id="list"
					items="{__ModelInspector>/Models}" >
					<StandardListItem
						title="{__ModelInspector>_Info/DisplayName}"
						description="{__ModelInspector>_Info/ClassName}"
						app:ModelName="{__ModelInspector>_Info/ModelName}"
						type="Navigation"
						icon="{__ModelInspector>_Info/IconUri}"
						press="onInspect"
						iconDensityAware="false"
						iconInset="false" />
				</List>
			</Page>
			<Page
				id="properties"
				showNavButton="true"
				navButtonPress="onNavBack"
				title="{__ModelInspector>/InspectingModel/DisplayName}">
				<List
					id="com.mitchbarry.controls.ModelInspector.PropertyList"
					items="{__ModelInspector>/InspectingModel/PropertiesAtDepth}" >
					<StandardListItem
						type="Active"
						press="onPropertyPress"
						iconDensityAware="false"
						iconInset="false" />
				</List>
			</Page>
		</NavContainer>
    </content>
	</ResponsivePopover>
</core:FragmentDefinition>